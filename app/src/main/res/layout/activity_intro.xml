<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.IntroActivity">


    <ImageView
        android:id="@+id/enjoy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/enjoy" />

    <ImageView
        android:id="@+id/world"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/world" />

    <ImageView
        android:id="@+id/stepbystep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stepbystep" />

    <ImageButton
        android:id="@+id/start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        android:onClick="start"
        android:scaleType="fitXY"
        android:background="@drawable/rounded4"
        app:layout_constraintBottom_toBottomOf="@+id/startbuttom"
        app:layout_constraintLeft_toLeftOf="@+id/startleft"
        app:layout_constraintRight_toLeftOf="@+id/startright"
        app:layout_constraintTop_toTopOf="@+id/starttop" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/next"
        android:onClick="start"
        android:scaleType="fitXY"
        android:background="@drawable/rounded4"
        app:layout_constraintBottom_toBottomOf="@+id/startbuttom"
        app:layout_constraintLeft_toLeftOf="@+id/startleft"
        app:layout_constraintRight_toLeftOf="@+id/startright"
        app:layout_constraintTop_toTopOf="@+id/starttop" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/starttop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startbuttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />



</androidx.constraintlayout.widget.ConstraintLayout>