<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="project.interpreter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,HardcodedDebugMode"
        tools:targetApi="m">
        <activity
            android:name=".Activities.MenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.SuccessActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.ManageActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.RegisterActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.WaitingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.OnlineActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.LoginActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.CompileActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.QuestionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.LevelsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.IntroActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>